<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:background="@android:color/transparent"
    android:paddingEnd="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="8dp"
    android:paddingStart="@dimen/activity_horizontal_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/background"
        android:layout_width="120dp"
        android:layout_height="104dp"
        app:cardBackgroundColor="@color/lighter_black"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/trailer_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/play_trailer_image"
            android:scaleType="center"
            android:src="@drawable/ic_play_circle" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/background"
        android:layout_alignLeft="@id/background"
        android:layout_alignRight="@id/background"
        android:layout_alignStart="@id/background"
        android:layout_below="@id/background"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:maxWidth="120dp"
        android:textSize="@dimen/description_text_size"
        android:textStyle="bold" />

</RelativeLayout>